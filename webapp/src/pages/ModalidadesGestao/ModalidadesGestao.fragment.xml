<core:FragmentDefinition 
	xmlns:core="sap.ui.core" 
	xmlns="sap.m">
	
	<Dialog	
		title="{i18n>Commom.ModalidadesGestao}">
		<content>
			<VBox class="sapUiSmallMargin" >			
				<Label text="{i18n>Commom.ModalidadesGestao}" />
				<Input value="{/Descricao}" required="true" placeholder="{i18n>Commom.InserirModalidadeGestao}" />
			</VBox>
			
		</content>
		<footer>
			<Toolbar>
				<content>
					<ToolbarSpacer></ToolbarSpacer>			
					<Button type="Accept"
							text="{i18n>Commom.Save}"
							press=".closeDialog" />
					<Button id="Reject"
						text="{i18n>Commom.Cancel}"
						type="Reject"
						press=".closeDialog"
						/>
				</content>
			</Toolbar>
		</footer>
	</Dialog>
	
</core:FragmentDefinition>
