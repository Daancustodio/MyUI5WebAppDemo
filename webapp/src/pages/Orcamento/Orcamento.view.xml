<mvc:View
	controllerName="MyUI5WebApp.src.pages.Orcamento.Orcamento"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"	
	height="100%">
	<Page 
		showNavButton="true" 
		title="{i18n>Commom.Orcamento}" 
		navButtonPress="onNavBack">
		
		<content>		
			<Table 
			inset="false"
			alternateRowColors="true"
			items="{Orcamento>/}">
			<headerToolbar>
				<OverflowToolbar>
					<SearchField  placeholder="{i18n>Commom.FindOrcamento}"  width="40%" />
					<Button  icon="sap-icon://sort"   press="onSortReverse"/>
					<ToolbarSpacer/>
					<Button  icon="sap-icon://add" type="Emphasized"   text="{i18n>Commom.New}"  press="onNewPress"/>

				</OverflowToolbar>
			</headerToolbar>
			<columns>
				<Column
					width="12em">
					<Text text="{i18n>Commom.Code}" />
				</Column>
				<Column
					minScreenWidth="Tablet"
					demandPopin="true">
					<Text text="{i18n>Commom.Contrato}" />
				</Column>
				<Column
					minScreenWidth="Tablet"
					demandPopin="true">
					<Text text="{i18n>Commom.OS}" />
				</Column>
				<Column
					minScreenWidth="Tablet"
					demandPopin="true">
					<Text text="{i18n>Commom.Unidade}" />
				</Column>
				<Column
					minScreenWidth="Tablet"
					demandPopin="true">
					<Text text="{i18n>Commom.DataInicio}" />
				</Column>
				<Column
					minScreenWidth="Tablet"
					demandPopin="true">
					<Text text="{i18n>Commom.DataFim}" />
				</Column>
				<Column
					width="84px" 
					minScreenWidth="Tablet"
					demandPopin="true"
					hAlign="Center">
					<Text text="{i18n>Commom.Actions}" />
				</Column>
			</columns>
			<items>
				<ColumnListItem vAlign="Middle">
					<cells>
						<ObjectIdentifier							
							 title="{Orcamento>Id}"/>						
						<Text
							text="{Orcamento>Contrato}" />
						<Text
							text="{Orcamento>OS}" />
						<Text
							text="{Orcamento>Unidade}" />
						<Text
							text="{Orcamento>DataInicio}" />
						<Text
							text="{Orcamento>DataFim}" />
						<HBox justifyContent="SpaceBetween" alignContent="SpaceBetween" > 
							<Button  icon="sap-icon://edit"  press="onEditPress"  type="Default" />
							<Button  icon="sap-icon://delete" press="onDeletePress" type="Reject"    />
						</HBox>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
		</content>	
	</Page>
</mvc:View>
